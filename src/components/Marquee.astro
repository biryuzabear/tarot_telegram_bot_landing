<section class="py-6 bg-gradient-to-r from-primary-900/50 via-primary-800/50 to-primary-900/50 border-y border-white/5 overflow-hidden">
  <div class="relative">
    <div class="flex whitespace-nowrap" id="marquee-container">
      {allFeatures.map((feature) => (
        <div class="flex items-center gap-2 mx-8">
          <span class="text-2xl">{feature.icon}</span>
          <span class="text-white font-medium">{feature.text}</span>
