  </div>
</section>

<script>
  const marquee = document.getElementById('marquee-container');
  if (marquee) {
    let position = 0;
    const speed = window.innerWidth < 640 ? 1.5 : 0.5; // pixels per frame

    function animate() {
      position -= speed;
      const resetPoint = -(marquee.scrollWidth / 2);

      if (position <= resetPoint) {
        position = 0;
      }

      marquee.style.transform = `translate3d(${position}px, 0, 0)`;
      requestAnimationFrame(animate);
    }

    animate();
  }
</script>
